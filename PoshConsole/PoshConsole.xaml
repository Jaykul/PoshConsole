      <VisualStateGroup Name="MouseStates">
         <VisualState Name="MouseEnter">
            <Storyboard>
               <ColorAnimation To="Green" 
                          Storyboard.TargetName="rectBrush" 
                          Storyboard.TargetProperty="Color"/>
